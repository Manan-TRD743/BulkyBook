@model CategoryModel

<form method="post">
    <input asp-for="CategoryID" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary row">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-4 row p-1">
            <label asp-for="CategoryName" class="p-2"></label>
            <input asp-for="CategoryName" class="form-control " disabled />
          
        </div>
        <div class="mb-4 row p-1">
            <label asp-for="CategoryDisplayOrder" class="p-2"></label>
            <input asp-for="CategoryDisplayOrder" class="form-control" disabled/>
           
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-dark border-2 form-control">
                    Back To List
                </a>
            </div>
        </div>

    </div>
</form>

