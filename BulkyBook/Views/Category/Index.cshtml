@model List<CategoryModel>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
           <a asp-controller="Category" asp-action="CreateNewCategory" class="btn btn-dark">
                <i class="bi bi-plus-circle" style="font-style : normal"> Create New Cateory</i>
           </a>
        </div>
    </div>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u=>u.CategoryDisplayOrder)) 
        {
            <tr>
                <td>
                    @obj.CategoryName
                </td>
                <td>
                    @obj.CategoryDisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="EditCategory" asp-route-id="@obj.CategoryID" class="btn btn-delete  mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                        </a>
                            <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@obj.CategoryID" class="btn btn-delete mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>

</div>