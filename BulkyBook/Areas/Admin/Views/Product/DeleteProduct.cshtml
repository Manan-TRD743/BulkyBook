@using BulkyBookModel
@model ProductModel
<div class="card shadow borderborder-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Delete Product</h2>
            <hr />
        </div>
    </div>
</div>

<div class="card-body p-4">
    <form method="post">
        <input asp-for="ProductID" hidden />
        <div class="border p-3 mb-4 ">
            <div class="form-floating py-2 col-12">
                <input asp-for="ProductTitle"  class="form-control border-0 shadow" disabled/>
                <label asp-for="ProductTitle" class="ms-2 fw-bolder"></label>
                <span asp-validation-for="ProductTitle" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">

                <input asp-for="ProductDescription"  class="form-control border-0 shadow" disabled/>
                <label asp-for="ProductDescription" class="ms-2 fw-bolder"></label>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">

                <input asp-for="ProductISBN" class="form-control border-0 shadow" disabled/>
                <label asp-for="ProductISBN" class="ms-2 fw-bolder"></label>
                <span asp-validation-for="ProductISBN" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">

                <input asp-for="ProductAuthor" class="form-control border-0 shadow" disabled/>
                <label asp-for="ProductAuthor" class="ms-2 fw-bolder"></label>
                <span asp-validation-for="ProductAuthor" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">

                <input asp-for="ProductListPrice" class="form-control border-0 shadow" disabled/>
                <label asp-for="ProductListPrice" class="ms-2 fw-bolder"></label>
                <span asp-validation-for="ProductListPrice" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">

                <input asp-for="ProductPriceOneToFifty" class="form-control border-0 shadow" disabled/>
                <label asp-for="ProductPriceOneToFifty" class="ms-2 fw-bolder"></label>
                <span asp-validation-for="ProductPriceOneToFifty" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">

                <input asp-for="ProductPriceFiftyPlus" class="form-control border-0 shadow" disabled/>
                <label asp-for="ProductPriceFiftyPlus" class="ms-2 fw-bolder"></label>
                <span asp-validation-for="ProductPriceFiftyPlus" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">

                <input asp-for="ProductPriceHundredPlus" class="form-control border-0 shadow" disabled />
                <label asp-for="ProductPriceHundredPlus" class="ms-2 fw-bolder"></label>
                <span asp-validation-for="ProductPriceHundredPlus" class="text-danger"></span>
            </div>

            <div class="row mt-3">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border-2 form-control">
                        Back To List
                    </a>
                </div>
            </div>

        </div>
    </form>

</div>


